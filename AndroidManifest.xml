<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="meg.joinus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="meg.joinus.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="meg.joinus.activities.UpcomingEventsActivity"
            android:label="@string/title_activity_upcoming_events"
            android:parentActivityName="meg.joinus.activities.MainActivity" >
        </activity>
        <activity
            android:name="meg.joinus.activities.NewEventActivity"
            android:label="@string/title_activity_new_event" 
            android:parentActivityName="meg.joinus.activities.UpcomingEventsActivity" >
        </activity>
    </application>

</manifest>
