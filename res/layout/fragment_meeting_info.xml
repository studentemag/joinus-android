<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MeetingActivity$DummySectionFragment" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="@string/meeting_info_address"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView1"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	    />
	
	    <TextView
	        android:id="@+id/TextView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_address"
	        android:layout_marginTop="20dp"
	        android:text="@string/meeting_info_date"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/TextView3"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_mc_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_date"
	        android:layout_marginTop="20dp"
	        android:text="@string/meeting_info_mc"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_mc_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_mc_title"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	    />
	    
	    <TextView
	        android:id="@+id/TextView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_mc_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/meeting_info_participants"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_participants"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/TextView5"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	    />
	    
	    <TextView
	        android:id="@+id/meeting_info_guests_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_participants"
	        android:layout_marginTop="20dp"
	        android:text="@string/meeting_info_guests"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	    />
	
	    <TextView
	        android:id="@+id/meeting_info_guests_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/meeting_info_guests_title"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	    />
	    
	    <Button
	        android:id="@+id/meeting_info_accept_button"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="15dp"
	        android:layout_below="@+id/meeting_info_guests_content"
	        android:text="@string/meeting_info_accept" 
	        android:onClick="accept"
		/>
	
	    <Button
	        android:id="@+id/meeting_info_deny_button"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
	        android:layout_below="@+id/meeting_info_guests_content"
	        android:layout_toRightOf="@+id/meeting_info_accept_button"
	        android:text="@string/meeting_info_deny"
	        android:onClick="deny"
		/>
	
	</RelativeLayout>
	
</ScrollView>